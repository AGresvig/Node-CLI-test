#!/usr/bin/env node

var program = require('commander');

program
  .version('0.0.1')

program
  .description('Say hi to someone')
  .option('-w, --who [name]', 'Specify who to say hello to')

program
  .command('hello')
  .action(function(){
    var who = program.who || "World";
    console.log('Hello %s!', program.who);
  });

program.parse(process.argv);

